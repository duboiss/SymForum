{% extends 'layouts/full-width.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block content %}
    {% do append_breadcrumb('Admin', path('admin.homepage')) %}
    {% do append_breadcrumb('Catégories') %}

    {{ include('partials/_breadcrumb.html.twig') }}

    <h1>
        <span>Catégories</span>
        <a class="btn btn-primary btn-sm" href="{{ path('admin.category.add') }}" title="Ajouter">
            <i class="fas fa-plus"></i>
        </a>
    </h1>

    <div id="messages"></div>

    <div class="mt-3">
        <table class="table table-sm">
            <thead>
            <tr class="d-flex">
                <th class="col-2">Position</th>
                <th class="col-8">Titre</th>
                <th class="col-2">Actions</th>
            </tr>
            </thead>
            <tbody class="thead-light">
            {% for category in categories %}
                <tr class="d-flex">
                    <td class="col-2">{{ category.position }}</td>
                    <td class="col-8">{{ category.title }}</td>
                    <td class="col-2">
                        <a class="btn btn-primary btn-sm" href="{{ path('admin.category.edit', {'id': category.id}) }}" title="Modifier">
                            <i class="fas fa-edit"></i>
                        </a>
                        -
                        <button class="btn btn-danger btn-sm js-delete-button" data-delete-url="{{ path('admin.category.delete', {'id': category.id}) }}" title="Supprimer">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
